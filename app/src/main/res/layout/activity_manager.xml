<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagerActivity">

    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCashier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Cashier Functions"
        app:layout_constraintEnd_toEndOf="@+id/txtWelcome"
        app:layout_constraintStart_toStartOf="@+id/txtWelcome"
        app:layout_constraintTop_toBottomOf="@+id/txtWelcome" />

    <Button
        android:id="@+id/btnFire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Remove Employee"
        app:layout_constraintEnd_toEndOf="@+id/btnCashier"
        app:layout_constraintStart_toStartOf="@+id/btnCashier"
        app:layout_constraintTop_toBottomOf="@+id/btnCashier" />

    <Button
        android:id="@+id/btnStocks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="view stocks"
        app:layout_constraintEnd_toEndOf="@+id/btnFire"
        app:layout_constraintStart_toStartOf="@+id/btnFire"
        app:layout_constraintTop_toBottomOf="@+id/btnHire" />

    <Button
        android:id="@+id/btnHire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Add Employee"
        app:layout_constraintEnd_toEndOf="@+id/btnFire"
        app:layout_constraintStart_toStartOf="@+id/btnFire"
        app:layout_constraintTop_toBottomOf="@+id/btnFire" />
</androidx.constraintlayout.widget.ConstraintLayout>